<h2>Apps cadastrados</h2>

<a href="/admin/apps/new" class="btn">➕ Adicionar novo app</a>

<ul>
  <% apps.forEach(app => { %>
  <li style="margin-bottom: 15px">
    <strong><%= app.nome %></strong> (<%= app.categoria %> - <%= app.plataforma
    %> v<%= app.versao %>)<br />
    <a href="<%= app.link %>" target="_blank">🔗 Link de download</a><br />
    <a href="/admin/apps/<%= app.id %>/edit" class="btn">✏️ Editar</a>
    <form
      action="/admin/apps/<%= app.id %>/delete"
      method="POST"
      style="display: inline"
    >
      <button type="submit" onclick="return confirm('Confirma exclusão?')">
        🗑️ Excluir
      </button>
    </form>
  </li>
  <% }) %>
</ul>
