<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Admin - Lista de Apps</title>
  </head>
  <body>
    <h1>Apps cadastrados</h1>
    <a href="/admin/apps/new">Adicionar novo app</a>
    <ul>
      <% apps.forEach(app => { %>
      <li>
        <strong><%= app.nome %></strong> (<%= app.categoria %>)
        <br />
        <a href="/admin/apps/<%= app.id %>/edit">Editar</a> |
        <form
          action="/admin/apps/<%= app.id %>/delete"
          method="POST"
          style="display: inline"
        >
          <button type="submit" onclick="return confirm('Confirma exclusÃ£o?')">
            Excluir
          </button>
        </form>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
