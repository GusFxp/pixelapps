<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PixelApps - Loja de Aplicativos</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
    <style>
      /* Partículas */
      body,
      html {
        margin: 0;
        padding: 0;
        background-color: #050e1f;
        overflow-x: hidden;
      }

      canvas#particle-canvas {
        position: fixed;
        top: 0;
        left: 0;
        z-index: -1;
      }

      /* Layout */
      .top-bar {
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .top-bar-row {
        width: 100%;
        max-width: 1200px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        box-sizing: border-box;
      }

      .logo {
        font-family: "Orbitron", sans-serif;
        font-size: 24px;
        color: #fff;
      }

      .logo-pixel {
        color: #00ffff;
      }

      .logo-apps {
        color: #ffffff;
      }

      .btn-register {
        background-color: #00ffff;
        color: #000;
        padding: 10px 18px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
      }

      .btn-register:hover {
        background-color: #00dddd;
      }

      .search-form {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        width: 100%;
        max-width: 600px;
        padding: 0 20px;
        box-sizing: border-box;
      }

      .search-input {
        flex: 1;
        padding: 10px;
        border: none;
        border-radius: 8px 0 0 8px;
        font-size: 16px;
      }

      .search-button {
        padding: 10px 20px;
        border: none;
        background-color: #00ffff;
        color: #000;
        font-weight: bold;
        cursor: pointer;
        border-radius: 0 8px 8px 0;
        transition: 0.3s;
      }

      .search-button:hover {
        background-color: #00dddd;
      }

      .section-title {
        color: #fff;
        text-align: center;
        margin-top: 40px;
        font-size: 28px;
      }

      .app-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
      }

      .app-card {
        background-color: #111;
        border-radius: 12px;
        padding: 15px;
        width: 250px;
        color: #fff;
        box-shadow: 0 0 10px #00ffff33;
        transition: 0.3s;
      }

      .app-card:hover {
        transform: scale(1.03);
        box-shadow: 0 0 20px #00ffff55;
      }

      .app-image {
        width: 100%;
        border-radius: 8px;
      }

      .app-info {
        margin-top: 10px;
      }

      .app-name {
        font-size: 20px;
        margin: 0;
        color: #00ffff;
      }

      .app-description {
        font-size: 14px;
        color: #ccc;
      }

      .no-apps {
        color: #ccc;
        text-align: center;
        font-style: italic;
      }

      @media (max-width: 600px) {
        .top-bar-row {
          flex-direction: row;
          justify-content: space-between;
          align-items: center;
        }

        .search-form {
          flex-direction: row;
          margin-top: 20px;
          padding: 0 10px;
        }

        .logo {
          font-size: 20px;
        }

        .btn-register {
          padding: 8px 14px;
          font-size: 14px;
        }

        .search-input {
          font-size: 14px;
        }

        .search-button {
          padding: 10px 16px;
          font-size: 14px;
        }

        .top-bar {
          align-items: stretch;
        }

        .search-form {
          flex-direction: row;
        }

        .top-bar-row {
          padding: 0 10px;
        }
      }
    </style>
  </head>
  <body>
    <canvas id="particle-canvas"></canvas>

    <header class="top-bar">
      <div class="top-bar-row">
        <h1 class="logo">
          <span class="logo-pixel">Pixel.</span
          ><span class="logo-apps">Apps</span>
        </h1>
        <a href="/register" class="btn-register">Registrar</a>
      </div>
      <form action="/search" method="GET" class="search-form">
        <input
          type="text"
          name="q"
          placeholder="Pesquisar aplicativos..."
          class="search-input"
        />
        <button type="submit" class="search-button">Buscar</button>
      </form>
    </header>

    <main>
      <h2 class="section-title">Últimos Apps</h2>

      <div class="app-list">
        <% if (apps.length === 0) { %>
        <p class="no-apps">Nenhum aplicativo cadastrado ainda.</p>
        <% } else { %> <% apps.forEach(app => { %>
        <div class="app-card">
          <img
            src="<%= app.imagem_url %>"
            alt="<%= app.nome %>"
            class="app-image"
          />
          <div class="app-info">
            <h3 class="app-name"><%= app.nome %></h3>
            <p class="app-description"><%= app.descricao %></p>
          </div>
        </div>
        <% }) %> <% } %>
      </div>

      <h2 class="section-title">Categorias</h2>
      <!-- Em breve -->
    </main>

    <script>
      const canvas = document.getElementById("particle-canvas");
      const ctx = canvas.getContext("2d");

      let particles = [];
      const particleCount = 80;

      function resizeCanvas() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
      }

      window.addEventListener("resize", resizeCanvas);
      resizeCanvas();

      for (let i = 0; i < particleCount; i++) {
        particles.push({
          x: Math.random() * canvas.width,
          y: Math.random() * canvas.height,
          r: Math.random() * 2 + 1,
          dx: (Math.random() - 0.5) * 0.5,
          dy: (Math.random() - 0.5) * 0.5,
        });
      }

      function drawParticles() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        ctx.fillStyle = "#00ffff";
        particles.forEach((p) => {
          ctx.beginPath();
          ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
          ctx.fill();
        });
      }

      function updateParticles() {
        particles.forEach((p) => {
          p.x += p.dx;
          p.y += p.dy;

          if (p.x < 0 || p.x > canvas.width) p.dx *= -1;
          if (p.y < 0 || p.y > canvas.height) p.dy *= -1;
        });
      }

      function animate() {
        drawParticles();
        updateParticles();
        requestAnimationFrame(animate);
      }

      animate();
    </script>
  </body>
</html>
